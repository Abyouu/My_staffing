<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_apk_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="435dp"
        android:layout_height="641dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#00B1FD"
        app:cardCornerRadius="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="427dp"
            android:layout_height="631dp"
            android:background="#00B1FD"
            android:padding="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Masukkan akun anda"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/poppins_light"
                android:text="  Nomor Induk Pegawai/NIP"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etNip"
                android:layout_width="365dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:hint="Nomor Induk Pegwai"
                android:drawableStart="@drawable/baseline_person_2_24"
                android:inputType="text"
                android:drawablePadding="15dp"
                android:background="@drawable/rounded_button_bg"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="  Password"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="365dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:background="@drawable/rounded_button_bg"
                android:padding="15dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:drawablePadding="15dp"
                android:textColor="@color/black"
                android:password="true"
                />


            <Button
                android:id="@+id/btnLogin"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="login"
                android:backgroundTint="#FFD600"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>